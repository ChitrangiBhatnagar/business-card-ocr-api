# Business Card Processing API - Environment Variables
# Copy this file to .env and fill in your values

# Application Environment (development, production, testing)
CARD_API_ENV=development

# Flask Settings
CARD_API_DEBUG=True
CARD_API_SECRET_KEY=your-secret-key-here-change-in-production

# File Storage
CARD_API_UPLOAD_FOLDER=uploads
CARD_API_OUTPUT_FOLDER=outputs

# OCR Settings
CARD_API_OCR_GPU=False

# Rate Limiting
CARD_API_RATE_LIMIT=60

# Logging
CARD_API_LOG_LEVEL=INFO

# ============================================
# FREE API KEYS (Optional - for enrichment)
# ============================================

# Hunter.io - Email verification (50 free requests/month)
# Get your key at: https://hunter.io/api
HUNTER_API_KEY=

# Abstract API - Email validation (100 free requests/month)
# Get your key at: https://www.abstractapi.com/email-verification-validation-api
ABSTRACT_API_KEY=

# GitHub Personal Access Token - For developer enrichment
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=
